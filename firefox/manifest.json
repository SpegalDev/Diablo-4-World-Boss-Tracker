{
  "manifest_version": 2,
  "name": "Diablo 4 World Boss Tracker",
  "short_name": "D4 World Bosses",
  "version": "1.0",
  "description": "Stay on top of Diablo 4's World Bosses with details, countdown timers, and notifications for upcoming spawns!",
  "icons": {
    "128": "icons/icon.png"
  },
  "developer": {
    "name": "ryan@spegal.dev"
  },
  "applications": {
    "gecko": {
      "id": "diablo@spegal.dev"
    }
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "notifications",
    "storage"
  ]
}